.row
  .twelve.columns
    / Navigation
    - if AppConfig.site.nav.main.hierarchical
      %nav.top-bar
        %ul
          = render "layouts/brand_nav"
          %li.toggle-topbar
            %a{:href => "#"}
          = render "layouts/main_nav_hierarchical"
          %li.divider
          = render "layouts/user_nav_hierarchical"
    - else
      %ul.nav-bar
        = render "layouts/brand_nav"
        = render "layouts/main_nav_flat"
        %li.divider
        = render "layouts/user_nav_flat"
    / End Navigation
    / Header Content
    .row
      .six.columns
        %img{:src => "http://placehold.it/500x500&text=Image"}
        %br/
      .six.columns
