/ Header and Nav
- if AppConfig.site.nav.main.hierarchical
  %nav.top-bar
    %ul
      / Title Area
      = render "layouts/brand_nav"
      %li.toggle-topbar
        %a{:href => "#"}
    %section
      / Left Nav Section
      %ul.left
        = yield(:main_nav)
        %li.divider
      / Right Nav Section
      %ul.right
        %li.divider
        = yield(:user_nav)
- else
  %ul.nav-bar
    = render "layouts/brand_nav"
    = yield(:main_nav)
    %li.divider
    = yield(:user_nav)
